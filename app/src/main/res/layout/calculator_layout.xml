<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.me.simplecalculator.viewmodel.CalculatorViewModel"/>
    </data>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="6"
        tools:context="com.me.simplecalculator.view.CalculatorActivity">

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text='@{viewModel.result}'/>


        <TextView
            android:id="@+id/exp_info_tv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text='@{viewModel.mathExpInfo}'/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("7")}'
            android:text="7"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("8")}'
            android:text="8"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("9")}'
            android:text="9"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("/")}'
            android:text="/"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("4")}'
            android:text="4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("5")}'
            android:text="5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("6")}'
            android:text="6"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("*")}'
            android:text="*"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("1")}'
            android:text="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("2")}'
            android:text="2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("3")}'
            android:text="3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("-")}'
            android:text="-"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked(".")}'
            android:text="."/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("0")}'
            android:text="0"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("=")}'
            android:text="="/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick='@{() -> viewModel.onButtonClicked("+")}'
            android:text="+"/>


        <!-- TODO :  is to but the clear button on the right most-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="left"
            android:onClick='@{() -> viewModel.onButtonClicked("c")}'
            android:text="C"/>


    </GridLayout>
</layout>
